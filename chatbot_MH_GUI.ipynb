    "import tkinter as tk\n",
    "import speech_recognition as sr\n",
    "import threading\n",
    "import openai\n",
    "import pyttsx3  # Text-to-speech library\n",
    "import time \n",
    "import datetime\n",
    "\n",
    "\n",

   # Fetch API key and fine-tuned model ID from environment variables
    openai.api_key = os.getenv("OPENAI_API_KEY")
    fine_tuned_model_id = os.getenv("FINE_TUNED_MODEL_ID")

    "# Initialize the TTS engine\n",
    "tts_engine = pyttsx3.init()\n",
    "\n",
    "# Adjust the speech rate (default is 200 words per minute)\n",
    "tts_engine.setProperty('rate', 150)  # Slower speech rate (you can tweak this number)\n",
    "\n",
    "# Adjust the volume (range is 0.0 to 1.0)\n",
    "tts_engine.setProperty('volume', 1.0)  # Full volume\n",
    "\n",
    "# Function to speak the AI's response using pyttsx3\n",
    "def speak_text(text):\n",
    "    \"\"\"Speak the given text using pyttsx3 with pauses between sentences.\"\"\"\n",
    "    sentences = text.split('. ')\n",
    "    for sentence in sentences:\n",
    "        tts_engine.say(sentence)\n",
    "        tts_engine.runAndWait()\n",
    "        time.sleep(0.5)  # Add a pause between sentences\n",
    "        \n",
    "#ToDoList: in this area, I need to change that to handle the personal information to handle sensitive personal information\n",
    "\n",
    "# Function to recognize speech input from the user\n",
    "def recognize_speech():\n",
    "    recognizer = sr.Recognizer()\n",
    "    with sr.Microphone() as source:\n",
    "        # Configure the \"blue_text\" tag to have blue text color\n",
    "        conversation_text.tag_configure(\"blue_text\", foreground=\"blue\")\n",
    "        conversation_text.insert(tk.END, \"\\nListening...\\n\")\n",
    "        root.update()  # Update the GUI\n",
    "\n",
    "        # Adjust for ambient noise to improve recognition in noisy environments\n",
    "        recognizer.adjust_for_ambient_noise(source)\n",
    "\n",
    "        try:\n",
    "            # Listen with a timeout to prevent blocking if there's no input\n",
    "            audio_data = recognizer.listen(source, timeout=5, phrase_time_limit=10)\n",
    "            text = recognizer.recognize_google(audio_data)\n",
    "            return text\n",
    "        except sr.UnknownValueError:\n",
    "            return \"Could not understand audio\"\n",
    "        except sr.RequestError:\n",
    "            return \"Speech Recognition API unavailable\"\n",
    "        except Exception as e:\n",
    "            return f\"Error: {str(e)}\"\n",
    "            \n",
    "#ToDoList: at this point the output text ne limited because of the tasting process i need to change this accordingly \n",
    "\n",
    "\n",
    "\n",
    "    \n",
    "# Function to handle response asynchronously\n",
    "def handle_response():\n",
    "    threading.Thread(target=async_response).start()\n",
    "\n",
    "# Function to generate AI response based on the current conversation state\n",
    "def async_response():\n",
    "    global reset_conversation\n",
    "    # Recognize the user's speech\n",
    "    user_input = recognize_speech()\n",
    "    \n",
    "    # If a timeout error occurs, prompt the user to answer a new question\n",
    "    if \"TimeoutError\" in user_input:\n",
    "        conversation_text.insert(tk.END, f\"\\n{user_input}\\n\")  # Display the error message\n",
    "        speak_text(\"It seems I didn’t hear anything. Let’s try again. How are you feeling now?\")\n",
    "        conversation_text.insert(tk.END, \"\\nCounselor: How are you feeling now?\\n\")\n",
    "        reset_conversation = True  # Set the flag to reset the context for the next input\n",
    "        root.update()\n",
    "        return  # Reset the flow with a new question\n",
    "\n",
    "    if \"Error\" in user_input or \"Could not understand\" in user_input:\n",
    "        conversation_text.insert(tk.END, f\"\\n{user_input}\\n\")\n",
    "        speak_text(\"I didn't catch that. Could you please say that again?\")\n",
    "        return\n",
    "    conversation_text.insert(tk.END, f\"\\nUser: {user_input}\\n\")\n",
    "\n",
    "  # Check if the user wants to end the conversation\n",
    "    if any(phrase in user_input.lower() for phrase in [\"no\", \"thank you\", \"that's all\", \"exit\"]):\n",
    "        end_conversation()\n",
    "        return  # Stop further AI responses if the user is done\n",
    "\n",
    "    # Generate a response using the fine-tuned OpenAI model if the conversation continues\n",
    "    response = openai.ChatCompletion.create(\n",
    "        model=fine_tuned_model_id,\n",
    "        messages=[{\"role\": \"user\", \"content\": user_input}],\n",
    "        max_tokens=50,\n",
    "        temperature=0.6  # Slightly increase temperature for more natural, creative responses\n",
    "    )\n",
    "\n",
    "    # Extract the generated response from OpenAI\n",
    "    ai_message = response['choices'][0]['message']['content'].strip()\n",
    "    \n",
    "    # Ensure proper sentence ending by adding periods (optional, AI should handle punctuation)\n",
    "    ai_message = ai_message.replace('  ', ' ').replace(' .', '.').replace('. ', '.\\n')\n",
    "    \n",
    "    conversation_text.insert(tk.END, f\"\\nAI: {ai_message}\\n\")\n",
    "\n",
    "    # Speak the AI response\n",
    "    speak_text(ai_message)\n",
    "    \n",
    "    # Ask follow-up question\n",
    "    follow_up_message = \"Is there anything else you'd like to talk about?\"\n",
    "    conversation_text.insert(tk.END, f\"\\nCounselor: {follow_up_message}\\n\")\n",
    "    speak_text(follow_up_message)\n",
    "\n",
    "    root.update()\n",
    "\n",
    "\n",
    "# Function to end the conversation and ask the user to download the conversation\n",
    "def end_conversation():\n",
    "    end_message = \"Thank you for sharing. please download the conversation using the Download button\"\n",
    "    conversation_text.insert(tk.END, f\"\\nCounselor: {end_message}\\n\")\n",
    "    speak_text(end_message)\n",
    "    root.update()  # Ensure the GUI updates properly\n",
    "\n",
    "\n",
    "\n",
    "# Function to save the conversation to a text file with the current date\n",
    "def save_conversation():\n",
    "    conversation = conversation_text.get(\"1.0\", tk.END)  # Get all text from the widget\n",
    "    # Get current date and format it as MM-DD-YYYY\n",
    "    current_time = datetime.datetime.now().strftime(\"%m-%d-%Y_%H-%M-%S\")\n",
    "    file_name = f\"conversation_{current_time}.txt\"  # Create the file name with date and time\n",
    "    with open(file_name, \"w\") as file:\n",
    "        file.write(conversation)\n",
    "    print(f\"Conversation saved to {file_name}\")\n",
    "\n",
    "\n",
    "\n",
    "# GUI setup\n",
    "root = tk.Tk()\n",
    "root.title(\"Counselor Chatbot\")\n",
    "\n",
    "# Set the window size (width x height)\n",
    "root.geometry('800x800')\n",
    "\n",
    "# Set the background color for the window\n",
    "root.configure(bg='#E0FFFF')  # Light cyan background\n",
    "\n",
    "# Text widget to display the conversation with custom background and text color\n",
    "conversation_text = tk.Text(root, height=40, width=80, bg='#F0F8FF', fg='#00008B')  # Alice blue background, dark blue text\n",
    "conversation_text.pack(pady=20)\n",
    "conversation_text.insert(tk.END, \"Counselor: Hi, how can I assist you today?\\n\")\n",
    "speak_text(\"Hi, how can I assist you today?\")  # Speak the initial prompt\n",
    "\n",
    "\n",
    "\n",
    "# Button to trigger the chatbot response\n",
    "tk.Button(root, text=\"Respond\", command=handle_response, bg='#4682B4', fg='white').pack()  # Steel blue button with white text\n",
    "\n",
    "\n",
    "# Button to save the conversation\n",
    "tk.Button(root, text=\"Download Conversation\", command=save_conversation, bg='#4682B4', fg='white').pack(pady=10)\n",
    "\n",
    "# Start the GUI event loop\n",
    "root.mainloop()\n"
   ]
